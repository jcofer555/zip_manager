  currentPath = path;

  updateBreadcrumb(path);

  fetch(`/plugins/zip_manager/helpers/list_files.php?dir=${encodeURIComponent(path)}`)
    .then(res => res.json())
    .then(items => {
      if (items.error) {
        document.getElementById("statusBox").innerText = "‚ùå " + items.error;
        return;
      }

      const ul = document.getElementById("fileList");
      ul.innerHTML = "";

      if (path !== "/mnt/") {
        const liUp = document.createElement("li");
        liUp.style.marginLeft = "-3px";
        liUp.innerHTML = `<span style="color:orange;cursor:pointer;">‚¨ÜÔ∏è Parent Directory</span>`;
        liUp.onclick = () => {
          let parentPath = path.endsWith("/") ? path.slice(0, -1) : path;
          parentPath = parentPath.substring(0, parentPath.lastIndexOf("/") + 1);
          openPicker(targetId, isDir, parentPath);
        };
        ul.appendChild(liUp);
      }

      const skipFolders = ['user0/', 'addons/', 'rootshare/'];
      const filteredItems = items
        .filter(item => !skipFolders.includes(item.name))
        .sort((a, b) => {
          const aFolder = a.name.endsWith("/");
          const bFolder = b.name.endsWith("/");
          if (aFolder && !bFolder) return -1;
          if (!aFolder && bFolder) return 1;
          return a.name.localeCompare(b.name);
        });

      if (disallowedBaseFolders.length === 0 && path === "/mnt/") {
        disallowedBaseFolders = filteredItems
          .filter(item => item.name.endsWith("/"))
          .map(item => path + item.name);
      }

      const allowedExtensions = [
        '7z','zip','rar','tar','gz','bz2','cbz','cbr','xz','lzma','z','cab','arj','iso','udf',
        'wim','dmg','vhd','vmdk','msi','deb','rpm','cpio','chm','nsis','exe',
        'tar.gz','tar.bz2','tar.xz','tar.zst','lzh','lha','ace','zst','img'
      ];

      let addSelectedBtn = document.createElement("button");
      addSelectedBtn.textContent = "‚úÖ Add Selected";
      addSelectedBtn.className = "btn-orange";
      addSelectedBtn.style.marginTop = "8px";
      addSelectedBtn.onclick = () => {
        const checked = ul.querySelector("input[type='checkbox']:checked");
        if (!checked) {
          shakeModal();
          return;
        }
        document.getElementById(targetId).value = checked.value;

        if (targetId === "inputFile") {
          const size = checked.dataset.size;
          document.getElementById("fileCountDisplay").textContent = size ? `üíæ ${size}` : "";

          let parentPath = checked.value.substring(0, checked.value.lastIndexOf("/"));
          if (!parentPath.endsWith("/")) parentPath += "/";
          const btnContainer = document.getElementById("addPathContainer");
          const addBtn = document.getElementById("addPathBtn");
          btnContainer.style.display = "block";
          addBtn.onclick = () => {
            document.getElementById("outputDir").value = parentPath;
            btnContainer.style.display = "none";
            validateExtractButton(); // ‚úÖ Update button state
          };

          fetch(`/plugins/zip_manager/helpers/check_encryption.php?input=${encodeURIComponent(checked.value)}`)
            .then(res => res.json())
            .then(data => {
              document.getElementById("archivePassword").value = "";
              document.getElementById("passwordRow").style.display = data.encrypted ? "flex" : "none";
            })
            .catch(err => console.error("Encryption check failed:", err));
        }

        validateExtractButton(); // ‚úÖ Update button state
        closeModal();
      };

      let clearSelectedBtn = document.createElement("button");
      clearSelectedBtn.textContent = "‚ùå Clear Selected";
      clearSelectedBtn.className = "btn-orange";
      clearSelectedBtn.style.marginLeft = "auto";
      clearSelectedBtn.onclick = () => {
        ul.querySelectorAll("input[type='checkbox']").forEach(cb => cb.checked = false);
        document.getElementById(targetId).value = "";

        if (targetId === "inputFile") {
          document.getElementById("fileCountDisplay").textContent = "";
          document.getElementById("archivePassword").value = "";
          document.getElementById("passwordRow").style.display = "none";
          document.getElementById("togglePasswordWrapper").style.display = "none";
          document.getElementById("addPathContainer").style.display = "none";
        }

        if (targetId === "outputDir") {
          document.getElementById("outputDir").value = "";
        }

        validateExtractButton(); // ‚úÖ Update button state
        // Do NOT close modal
      };

      // Render folders
      filteredItems.forEach(item => {
        if (item.name.endsWith("/")) {
          const fullPath = path + item.name;
          const li = document.createElement("li");
          const wrapper = document.createElement("span");
          wrapper.style.gap = "8px";

          const cb = document.createElement("input");
          cb.type = "checkbox";
          cb.value = fullPath;
          cb.style.margin = "0";

          if (isDir && !disallowedBaseFolders.includes(fullPath)) {
            cb.onclick = () => {
              ul.querySelectorAll("input[type='checkbox']").forEach(c => { if (c !== cb) c.checked = false; });
            };
          } else {
            cb.disabled = true;
            cb.style.opacity = "0.5";
            cb.style.cursor = "not-allowed";
          }

          wrapper.appendChild(cb);

          const nameSpan = document.createElement("span");
          nameSpan.textContent = `üìÅ ${item.name}`;
          nameSpan.style.color = "orange";
          nameSpan.style.cursor = "pointer";
          nameSpan.onclick = () => openPicker(targetId, isDir, fullPath);

          wrapper.appendChild(nameSpan);
          li.appendChild(wrapper);
          ul.appendChild(li);
        }
      });

      // Render files
      if (!isDir) {
        filteredItems.forEach(item => {
          if (!item.name.endsWith("/")) {
            const lower = item.name.toLowerCase();
            const isValid = allowedExtensions.some(ext => lower.endsWith(`.${ext}`));
            if (!isValid) return;

            const li = document.createElement("li");
            const wrapper = document.createElement("span");
            wrapper.style.gap = "8px";

            const cb = document.createElement("input");
            cb.type = "checkbox";
            cb.value = path + item.name;
            cb.dataset.size = formatBytes(item.size);
            cb.style.margin = "0";
            cb.onclick = () => {
              ul.querySelectorAll("input[type='checkbox']").forEach(c => { if (c !== cb) c.checked = false; });
            };
            wrapper.appendChild(cb);

            const fileLabel = document.createElement("span");
            fileLabel.textContent = `üìÑ ${item.name} (${formatBytes(item.size)})`;
            fileLabel.style.color = "orange";

            wrapper.appendChild(fileLabel);
            li.appendChild(wrapper);
            ul.appendChild(li);
          }
        });
      }

      const buttonWrapper = document.createElement("div");
      buttonWrapper.style.display = "flex";
      buttonWrapper.style.marginTop = "8px";

      addSelectedBtn.style.marginRight = "8px";
      clearSelectedBtn.style.marginLeft = "auto";

      buttonWrapper.appendChild(addSelectedBtn);
      buttonWrapper.appendChild(clearSelectedBtn);

      ul.appendChild(document.createElement("br"));
      ul.appendChild(buttonWrapper);
      document.getElementById("pickerModal").style.display = "block";
    });
}

function updateBreadcrumb(path) {
  const breadcrumbDiv = document.getElementById("breadcrumb");
  breadcrumbDiv.innerHTML = "";

  if (!path.endsWith("/")) path += "/";

  if (!path.startsWith("/mnt/")) {
    path = "/mnt/";
  }

const rootSpan = document.createElement("span");
rootSpan.innerHTML = '<i class="fas fa-home" style="color:green;"></i>';
rootSpan.style.cursor = "pointer";
rootSpan.style.textDecoration = "underline";
rootSpan.onclick = () => openPicker(currentTargetId, currentIsDir, "/mnt/");
breadcrumbDiv.appendChild(rootSpan);

  let subPath = path.substring(5); // after /mnt/

  if (subPath.length > 0) {
    const parts = subPath.split("/").filter(p => p.length > 0);

    parts.forEach((part, idx) => {
      const sep = document.createElement("span");
      sep.textContent = "->";
      sep.className = "separator";
      breadcrumbDiv.appendChild(sep);

      const cumulativePath = "/mnt/" + parts.slice(0, idx + 1).join("/") + "/";

      const span = document.createElement("span");
      span.textContent = part;
      span.style.cursor = "pointer";
      span.style.textDecoration = "underline";
      span.onclick = () => openPicker(currentTargetId, currentIsDir, cumulativePath);
      breadcrumbDiv.appendChild(span);
    });
  }
}

