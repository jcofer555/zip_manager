function loadExtractHistory() {
  fetch("/plugins/zip_manager/helpers/get_extract_history.php")
    .then(res => res.text())
    .then(data => {
      const logBox = document.getElementById("extractLogBox");
      const clearBtn = document.getElementById("clearHistoryBtn");
      const placeholder = document.getElementById("extractLogPlaceholder");
      const trimmed = data.trim();

      const hasRealHistory = trimmed && !/^No extraction history!?$/i.test(trimmed);

      if (hasRealHistory) {
        logBox.innerText = trimmed;
        logBox.style.display = "block";
        placeholder.style.display = "none"; // ‚úÖ Hide placeholder
        clearBtn.disabled = false;
        clearBtn.title = "Clear extraction history";
      } else {
        logBox.innerText = "";
        logBox.style.display = "none";
        showNoHistoryMessage();
        clearBtn.disabled = true;
        clearBtn.title = "No history to clear";
      }
    })
    .catch(() => {
      const logBox = document.getElementById("extractLogBox");
      const clearBtn = document.getElementById("clearHistoryBtn");
      const placeholder = document.getElementById("extractLogPlaceholder");

      logBox.innerText = "‚ùå Failed to load history.";
      logBox.style.display = "block";
      placeholder.style.display = "none"; // ‚úÖ Hide placeholder
      clearBtn.disabled = true;
      clearBtn.title = "No history to clear";
    });
}

